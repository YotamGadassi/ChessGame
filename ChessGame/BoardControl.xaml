<UserControl x:Class="ChessGame.BoardControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChessGame"
             mc:Ignorable="d">
    <Canvas x:Name="m_MainCanvas">
        <Grid AllowDrop="True" Width="Auto" Height="Auto" x:Name="m_mainGrid" Background="White" ShowGridLines="True" Loaded="init_Grid">
        </Grid>
    </Canvas>
</UserControl>
