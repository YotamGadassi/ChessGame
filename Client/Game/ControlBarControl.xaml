<UserControl x:Class="Client.Game.ControlBarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.Game"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal">
        <Button Padding="10" Margin="5" Content="Start/Resume" Command="{Binding StartResume}"/>
        <Button Padding="10" Margin="5" Content="Pause" Command="{Binding Pause}"/>
        <Button Padding="10" Margin="5" Content="EndGame" Command="{Binding EndGame}"/>
    </StackPanel>
</UserControl>
