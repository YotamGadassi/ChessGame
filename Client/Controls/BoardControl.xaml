<UserControl x:Class="Client.BoardControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChessGame"
             mc:Ignorable="d">
    <Canvas x:Name="m_MainCanvas">
        <Grid Width="Auto" Height="Auto" x:Name="m_mainGrid" Loaded="CreateMainGrid">
            <Grid x:Name="m_gameGrid" Loaded="CreateGameGrid"/>
        </Grid>
    </Canvas>
</UserControl>
