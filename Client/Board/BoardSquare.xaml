<UserControl x:Class="Client.Board.BoardSquare"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.Board"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Image x:Name="BackgroundImage" HorizontalAlignment="Center" VerticalAlignment="Center" Source="{Binding BackgroundImageSource}"/>
        <Image x:Name="ToolImage" HorizontalAlignment="Center" VerticalAlignment="Center" Source="{Binding BackgroundImageSource}"/>
    </Grid>
</UserControl>
